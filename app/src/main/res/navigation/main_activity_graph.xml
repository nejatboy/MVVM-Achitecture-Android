<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_activity_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.cleanarchitecture.ui.splash.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeNavigationFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeNavigationFragment"
        android:name="com.example.cleanarchitecture.ui.home.HomeNavigationFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/profileNavigationFragment"
        android:name="com.example.cleanarchitecture.ui.profile.ProfileNavigationFragment"
        android:label="ProfileFragment" />
</navigation>